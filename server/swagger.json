{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Employee Shift Management Plugin",
    "description": "",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "https://employeeshift.zuri.chat",
  "basePath": "lint:fix",
  
  "schemes": [
    "http", "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths":{
    
    "/api/ping": {
      "get": {
        "description": "Ping the url for testing"
      },
      "produces": [
        "application/json"
      ],
      "responses": {
        "200": {
          "description": "Employee Shift API Success!!!"
        }
      }
    },
    "/api/v1/users": {
      "get": {
        "description": "fetch user ID from zuri_core"
      },
      "produces": [
        "application/json"
      ],
      "responses": {
        "200": {
          "description": "SUCCESS - user ID fetched!!!"
        }
      }
    },
    "/api/v1/auth": {
      "get": {
        "description": "get user authentication from zuri_core"
      },
      "produces": [
        "application/json"
      ],
      "responses": {
        "200": {
          "description": " SUCCESS - user authenticated!!!"
        }
      }
    },
    "/api/v1/org": {
      "get": {
        "description": "get organisation id from zuri_core"
      },
      "produces": [
        "application/json"
      ],
      "responses": {
        "200": {
          "description": " SUCCESS - organisation id fetched!!!"
        }
      }
    },
    "/api/v1/sidebar": {
      "get": {
        "description": "plugin sidebar"
      },
      "produces": [
        "application/json"
      ],
      "responses": {
        "200": {
          "description": " SUCCESS - sidebar api!!!"
        }
      }
    },
    "/api/v1/workshifts": {
      "get": {
        "description": "view all organisation shifts"
      },
      "produces": [
        "application/json"
      ],
      "responses": {
        "200": {
          "description": " SUCCESS - view all shifts!!!"
        }
      }
    },
    "/api/v1/workshifts/:id": {
      "post": {
        "description": "post a new shift"
      },
      "produces": [
        "application/json"
      ],
      "responses": {
        "200": {
          "description": "SUCCESS - new shift posted!!!"
        }
      }
    },
    "/api/v1/workshifts/:id/": {
      "put": {
        "description": "update workshift"
      },
      "produces": [
        "application/json"
      ],
      "responses": {
        "200": {
          "description": "SUCCESS - shift updated!!!"
        }
      }
    },
    "/api/v1/workshifts/:id//": {
      "delete": {
        "description": "delete workshift"
      },
      "produces": [
        "application/json"
      ],
      "responses": {
        "200": {
          "description": "SUCCESS - workshift deleted!!!"
        }
      }
    },
    "/api/v1/info": {
      "get": {
        "description": "Info about workshift plugin"
      },
      "produces": [
        "application/json"
      ],
      "responses": {
        "200": {
          "description": "SUCCESS - info!!!"
        }
      }
    }
  }
}